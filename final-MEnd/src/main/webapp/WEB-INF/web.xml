<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <welcome-file-list>
  	<welcome-file>jsp/comments.jsp</welcome-file>
  	<welcome-file>/jsp/comments.jsp</welcome-file>
  </welcome-file-list>
  
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>mark.butko.controller.filter.EncodingFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
  
  <listener>
		<listener-class>mark.butko.controller.listener.ContextListener</listener-class>
	</listener>

	<listener>
		<listener-class>mark.butko.controller.listener.SessionListener</listener-class>
	</listener>
  
  <servlet>
  	<servlet-name>Servlet</servlet-name>
  	<display-name>Servlet</display-name>
  	<servlet-class>mark.butko.controller.Servlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>Servlet</servlet-name>
  	<url-pattern>/get</url-pattern>
  </servlet-mapping>
  
  <resource-ref>
	<description>MySQL Connection Pool</description>
	<res-ref-name>jdbc/mend</res-ref-name>
	<res-type>javax.sql.DataSource</res-type>
	<res-auth>Container</res-auth>
  </resource-ref>
  
</web-app>
